<% if (head && has_config('plugins.google-analytics.tracking_id')) { %>
    <script async
        src="https://www.googletagmanager.com/gtag/js?id=<%= get_config('plugins.google-analytics.tracking_id') %>"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());

        gtag('config', "<%= get_config('plugins.google-analytics.tracking_id') %>", {
            'anonymize_ip': true,
            'allow_google_signals': false,
            'allow_ad_personalization_signals': false
        });
    </script>
    <% } %>